<div class="w-full">
  <div class="mx-auto max-w-7xl">
    <div class="flex">
      <div class="w-1/3 pr-8">
        <div class="flex items-center justify-center w-full h-72 bg-gray-200 rounded sm:w-96 dark:bg-gray-700">
            <svg class="w-10 h-10 text-white dark:text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 18">
                <path d="M18 0H2a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2Zm-5.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3Zm4.376 10.481A1 1 0 0 1 16 15H4a1 1 0 0 1-.895-1.447l3.5-7A1 1 0 0 1 7.468 6a.965.965 0 0 1 .9.5l2.775 4.757 1.546-1.887a1 1 0 0 1 1.618.1l2.541 4a1 1 0 0 1 .028 1.011Z"/>
            </svg>
        </div>
      </div>
      <div class="w-2/3">
        <div class="flex justify-between items-center mb-4">
          <div>
            <h1 class="text-2xl font-bold"><%= @product.title %></h1>
            <p class="text-primary-600"><%= @product.brand.name %></p>
          </div>
          <div class="flex space-x-2">
            <%= link_to edit_product_path(@product), data: { turbo_frame: 'modal' }, class: "text-gray-600 hover:text-gray-900" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
            <%= link_to products_path, class: "text-gray-600 hover:text-gray-900" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
            <% end %>
            <%= button_to @product, method: :delete, class: "text-gray-600 hover:text-gray-900", form: { data: { turbo_confirm: 'Are you sure?' } } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        </div>
        <%= render @product, show_full_details: true %>
      </div>
    </div>
  </div>
</div>
