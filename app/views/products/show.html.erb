<div class="mx-auto w-full">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold"><%= @product.title %></h1>
      <div class="flex space-x-2">
        <%= link_to edit_product_path(@product), class: "text-gray-600 hover:text-gray-900" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
        <%= link_to products_path, class: "text-gray-600 hover:text-gray-900" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <%= button_to @product, method: :delete, class: "text-gray-600 hover:text-gray-900", form: { data: { turbo_confirm: 'Are you sure?' } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      </div>
    </div>
    <div class="flex">
      <div class="w-1/2 pr-8">
        <div class="bg-gray-200 w-full h-96 flex items-center justify-center">
          <span class="text-gray-500 text-2xl">Product Image</span>
        </div>
      </div>
      <div class="w-1/2">
        <%= render @product, show_full_details: true %>
      </div>
    </div>
  </div>
</div>
