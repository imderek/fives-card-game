<div id="<%= dom_id product %>" class="product-card">
  <% if local_assigns[:show_full_details] %>
    <!-- Full product details for show view -->
    <div class="flex">
      <div class="flex flex-col">
        <p class="text-gray-600 mb-4"><%= product.description %></p>
        <!-- Add more details as needed -->
      </div>
    </div>
  <% else %>
    <!-- Simplified product details for index view -->
    <div class="flex">
      <%= link_to product_path(product), class: "bg-gray-200 w-16 h-24 flex items-center justify-center mr-4 min-w-[96px] flex-shrink-0" do %>
        <span class="text-gray-500 text-xs">Image</span>
      <% end %>
      <div class="flex flex-col overflow-hidden">
        <h3 class="text-lg font-semibold truncate">
          <%= link_to truncate(product.title, length: 50), product_path(product), class: "hover:underline" %>
        </h3>
        <p class="text-gray-600 line-clamp-3 overflow-ellipsis"><%= product.description %></p>
      </div>
    </div>
  <% end %>
</div>
