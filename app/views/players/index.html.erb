<div class="max-w-7xl mx-auto px-4 py-6">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to root_path, class: "inline-flex items-center gap-2 mb-5 px-4 py-2 text-sm text-white rounded-lg border border-slate-500/50 hover:bg-slate-700" do %>
      <i class="fa fa-chevron-left"></i>
      <span>Back to Lobby</span>
    <% end %>
    <h1 class="text-3xl mb-2 font-bold text-white">Players</h1>
    <p class="text-slate-400 text-base">Basic stats for all players</p>
  </div>
  <!-- Players Table -->
  <div class="bg-slate-700 rounded-lg shadow-xl overflow-hidden">
    <table class="w-full text-sm text-white text-left">
      <thead class="bg-slate-600 text-slate-300">
        <tr>
          <th class="px-3 py-3 align-top">Player</th>
          <th class="px-3 py-3 align-top">PVP/Bot</th>
          <th class="px-3 py-3 align-top">Last Active</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-600">
        <% @players.each do |player| %>
          <tr class="hover:bg-slate-600/50">
            <td class="px-3 py-3 align-top">
              <%= player.email.titleize %>
            </td>
            <td class="px-3 py-3 align-top"><%= player.pvp_games_count %>/<%= player.bot_games_count %></td>
            <td class="px-3 py-3 align-top"><%= player.last_active_at&.strftime('%m/%d/%y') || 'Never' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>