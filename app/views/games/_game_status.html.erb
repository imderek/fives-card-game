<div id="game-status" class="<%= current_user.id != game.player1_id || game.winner_id ? 'w-full mb-6 text-center' : 'hidden' %>">
  <% if current_user.id != game.player1_id %>
    <div class="mx-6 mb-4 bg-black/20 text-white/80 text-sm p-2 rounded-lg">Spectator mode</div>
  <% end %>

  <% if game.winner_id %>
    <div class="w-full mb-6 px-6 text-center animate-enter-scale">
      <div class="w-full mx-auto bg-white text-black text-sm py-5 rounded-lg">
        <i class="fa fa-trophy text-yellow-400 text-2xl animate-bounce"></i>
        <h2 class="text-lg font-bold mb-0"><%= game.winner.email %></h2>
        <p class="text-gray-400 font-semibold mb-0">Winner</p>
      </div>
    </div>
    <div class="w-full px-6">
      <%= link_to "Back to Lobby", games_path, class: "block text-center border border-slate-500/50 rounded-lg mb-0 px-4 py-3 text-sm text-gray-500 hover:text-gray-700 dark:text-white dark:hover:text-white/70" %>
    </div>
  <% end %>
</div> 
