<div class="dark justify-center mx-auto mb-5 py-6 pt-[4.55rem] px-3">
  <h1 class="mb-4 text-xl font-semibold text-center dark:text-white">Choose Your Opponent</h1>
  <%= form_with(model: @game, local: true, class: "") do |f| %>
    <div class="mb-6 w-full md:w-96 mx-auto">
      <%# <label for="player2" class="block mb-2 font-medium text-white">Select Player</label> %>
      <div class="relative">
        <%= f.select :player2_id,
            @available_players.map { |p| [p.email.titleize, p.id] },
            { prompt: "Select an opponent" },
            { class: "bg-slate-700 border border-slate-500/60 text-white rounded-lg focus:ring-amber-500 focus:border-amber-500 block w-full p-2.5" }
        %>
      </div>
    </div>

    <div class="flex flex-col px-1 md:flex-row justify-center gap-2 font-medium">
      <%= f.submit "Start Game", class: "cursor-pointer px-6 py-3 text-white bg-amber-500 hover:bg-amber-400 rounded-lg" %>
      <%= link_to "Cancel", games_path, class: "px-6 py-3 text-center bg-white dark:text-white rounded-md dark:border dark:border-slate-500/60 dark:bg-transparent dark:hover:bg-slate-800" %>
    </div>
  <% end %>
</div> 