<%= link_to game_path(game), id: dom_id(game), class: "block bg-white bg-gradient-to-br from-slate-600 to-slate-800 dark:text-white py-4 px-4 rounded-lg shadow-xl" do %>
  <% opponent = game.player1_id == current_user.id ? game.player2 : game.player1 %>
  <div class="flex justify-between items-center text-sm">
    <div>
      <div class="flex flex-row items-center mb-1">
        <span class="inline-block mr-2 px-2 py-1 font-semibold bg-red-100 text-red-600 rounded dark:bg-slate-500/50 dark:text-white">
            <%#= game.game_type.upcase %>
            BOT VS
        </span>
        <span class="inline-block font-medium"><%= game.player1.email.capitalize %></span>
      </div>
      <div class="text-gray-500 dark:text-white/70 text-xs"><%= time_ago_in_words(game.created_at).capitalize %> ago</div>
    </div>

    <div class="flex gap-4 items-center">
      <%= content_tag :span,class: "text-gray-400 hover:text-gray-500 relative right-2 dark:text-white/70" do %>
        <i class="fa fa-chevron-right text-lg"></i>
      <% end %>

      <% if false %>
        <%= button_to game_path(game), 
            method: :delete,
            class: "text-gray-400 hover:text-gray-500",
            form: { data: { turbo_confirm: "Are you sure?" } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
