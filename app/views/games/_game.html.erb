<div id="<%= dom_id(game) %>" class="bg-white p-6 rounded-lg shadow">
  <% opponent = game.player1_id == current_user.id ? game.player2 : game.player1 %>
  <div class="flex justify-between items-center">
    <div class="space-y-1">
      <span class="inline-block px-2 py-1 text-sm font-semibold bg-blue-100 text-blue-800 rounded">
        <%= game.game_type.upcase %>
      </span>
      <p class="text-gray-600">
        vs <%= game.bot? ? "Bot" : opponent&.email %>
      </p>
      <% if game.current_turn %>
        <p class="text-sm text-gray-500">
          Current Turn: <%= game.current_turn == game.player1_id ? game.player1&.email : game.player2&.email %>
        </p>
      <% end %>
    </div>

    <div class="flex gap-2">
      <%= link_to "Continue Game", 
                  game_path(game), 
                  class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      
      <% if game.player1_id == current_user.id %>
        <%= button_to "Delete", game_path(game), 
            method: :delete,
            class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700",
            form: { data: { turbo_confirm: "Are you sure?" } } %>
      <% end %>
    </div>
  </div>
</div> 