<div id="game-container" data-game-id="<%= @game.id %>" class="container mx-auto px-4 py-5">
  <%= turbo_stream_from "game_#{@game.id}" %>

  <div id="game_error" class="hidden text-white/50 text-center mb-4"></div>

  <div id="game_status">
    <%= render "game_status", game: @game, current_user: current_user %>
  </div>

  <div id="game_state" class="mb-8">
    <%= render "game_state", game: @game, current_user: current_user %>
  </div>

  <div id="player_controls">
    <%= render partial: "player_controls", locals: { game: @game, current_user: current_user } %>
  </div>

  <div class="flex justify-center mt-7">
    <%= link_to "Back to Home", games_path, class: "px-4 py-2 text-gray-500 hover:text-gray-700 dark:text-white/50 dark:hover:text-white/70" %>
  </div>
</div>