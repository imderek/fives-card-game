<%= turbo_stream_from "game_#{@game.id}_player_#{current_user.id}" %>

<div class="max-w-7xl mx-auto p-4 pb-0">
  <%= render "shared/header" %>
</div>

<div
  id="react-game-root"
  data-turbo="false"
  data-game="<%= @game_with_players.to_json %>"
  data-current-user="<%= current_user.to_json %>"
  class="text-white text-center">
    <div class="pt-8">
      <i class="fa fa-spinner fa-spin text-4xl text-slate-500"></i>
    </div>
</div>