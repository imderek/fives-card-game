<%= turbo_stream_from "games" %>

<div class="max-w-7xl mx-auto p-6 pb-8">
  <div class="flex flex-row justify-between mb-4">
    <h1 class="text-3xl font-bold dark:text-white">Lobby</h1>
    <%= button_to "Sign Out", destroy_user_session_path, 
        method: :delete,
        class: "px-4 py-2 text-sm bg-gray-400 text-white rounded-lg hover:bg-gray-500 dark:bg-white/20 dark:hover:bg-white/30" %>
  </div>

  <div class="mb-5 bg-white p-6 rounded-xl shadow-xl">
    <h2 class="text-xl font-semibold mb-4">Start New Game</h2>
    <div class="flex gap-4">
      <%= link_to "Play vs Bot", 
                  new_game_path(type: :bot), 
                  class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600" %>
      <%#= link_to "Play vs Player", 
                  new_game_path(type: :pvp), 
                  class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  </div>

  <h1 class="text-xl font-semibold mb-4 dark:text-white">Recent Games</h1>

  <div id="games_list" class="grid gap-4">
    <% @games.each do |game| %>
      <%= render "games/game", game: game %>
    <% end %>
  </div>
</div>