<%= turbo_stream_from "games" %>

<div class="max-w-7xl mx-auto px-4 py-6 pb-20">
  <!-- Header -->
  <div class="flex flex-row justify-between mb-2">
    <h1 class="text-3xl font-bold text-white dark:text-white">Lobby</h1>
    <!-- Instructions modal -->
    <div id="instructions-modal" tabindex="-1" aria-hidden="true" data-modal-placement="center" class="hidden fixed top-0 left-0 right-0 z-50 w-full p-5 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
        <div class="relative w-full max-w-2xl max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-white">
              <!-- Modal header -->
              <div class="flex items-start justify-between p-4 md:p-5 rounded-t">
                <div class="flex flex-col">
                  <h3 class="mb-0.5 text-xl font-semibold text-slate-900">
                      How to Play Fives
                  </h3>
                  <p class="text-sm font-medium text-slate-500">Build poker hands to score points.</p>
                </div>
                <button type="button" class="text-slate-400 bg-transparent hover:bg-slate-200 hover:text-slate-900 rounded-lg text-sm w-8 h-6 ms-auto inline-flex justify-center items-center dark:hover:bg-slate-600 dark:hover:text-white" data-modal-hide="instructions-modal">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
              </div>
              <!-- Modal body -->
              <div class="p-4 pt-0 space-y-6">
                  <div class="text-sm text-slate-900">
                    <ol class="list-disc relative ml-1">
                        <li class="ms-4">
                            <p class="mb-2">Each player is dealt <strong>6 cards</strong>.</p>
                        </li>
                        <li class="ms-4">
                            <p class="mb-2">For each turn, you can <strong>place one card</strong> from your hand <strong>onto the board</strong> in any column.</p>
                        </li>
                        <li class="ms-4">
                            <p class="mb-2">Each column <strong> represents a poker hand</strong>. The better the hand, the more points you earn.</p>
                        </li>
                        <li class="ms-4">
                            <p class="mb-2">At the end of your turn, <strong>you will be given a new card</strong> from the deck automatically.</p>
                        </li>
                        <li class="ms-4">
                            <p class="mb-2">Score more points than your opponent to win.</p>
                        </li>
                    </ol>
                    <div class="mt-4 mb-2 border-t border-slate-300 pt-4 px-1">
                      <p class="text-lg font-semibold text-slate-900 mb-3">Poker Hands</p>
                      <div class="grid grid-cols-1 gap-x-8 gap-y-1 text-sm text-slate-600">
                        <div class="flex justify-between">
                          <span class="text-slate-900">Royal Flush</span>
                          <span>1000</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Straight Flush</span>
                          <span>800</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Four of a Kind</span>
                          <span>700</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Full House</span>
                          <span>600</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Flush</span>
                          <span>500</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Straight</span>
                          <span>400</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Three of a Kind</span>
                          <span>300</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">Two Pair</span>
                          <span>200</span>
                        </div>
                        <div class="flex justify-between">
                          <span class="text-slate-900">One Pair</span>
                          <span>100</span>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
          </div>
      </div>
    </div>
    <%= button_to "Sign Out", destroy_user_session_path, 
        method: :delete,
        class: "px-4 py-2 text-sm text-white rounded-lg border dark:border-slate-500/50" %>
  </div>

  <!-- Welcome -->
  <div class="mb-2 text-center text-white py-1">
    <h2 class="text-lg font-semibold mb-3">Welcome, <%= current_user.email.titleize %>.</h2>
    <div class="flex flex-col justify-center gap-3 text-[.925rem]">
      <!-- Play buttons -->
      <div class="flex flex-row justify-center gap-2.5">
        <%= link_to "<i class='fa-solid fa-play mr-0.5'></i> Play vs Bot<span class='inline-block text-xs text-amber-900 font-medium'>Available Now!</span>".html_safe,
          new_game_path(type: :bot),
          class: "w-full px-2 py-5 leading-[1.25rem] pt-[1.3rem] rounded-lg font-semibold text-white bg-gradient-to-l from-amber-600 to-amber-300 hover:bg-amber-700" %>
        <%= link_to "<i class='fa-solid fa-user mr-0.5'></i> Play vs Human<span class='inline-block text-xs text-slate-300/80 font-normal'>Coming Soon</span>".html_safe,
          '#',
          class: "w-full px-2 py-5 leading-[1.25rem] pt-[1.3rem] rounded-lg font-semibold text-white bg-slate-700" %>
      </div>
      <!-- How to play -->
      <button data-modal-target="instructions-modal" data-modal-toggle="instructions-modal" class="text-slate-400 hover:text-slate-300 rounded-lg">
        <i class="fa-solid fa-circle-question mr-0.5 opacity-70"></i> How to Play
      </button>
    </div>
  </div>

  <!-- Leaderboard -->
  <h1 class="text-xl font-medium mb-3 dark:text-white">Top Scores</h1>
  <div class="grid gap-4 mb-4">
    <div class="text-sm flex flex-col gap-3 justify-between text-white p-4 bg-slate-700 rounded-lg shadow-xl">
      <% @high_scores.each_with_index do |game, index| %>
        <!-- User row -->
        <div class="flex flex-row justify-between items-center">
          <!-- Left column -->
          <div class="flex flex-row gap-1 items-center">
            <div class="inline-block w-2 mr-1 text-slate-400 text-center"><%= index + 1 %></div>
            <div class="mr-1 w-6 h-6 rounded-full bg-gradient-to-b shadow-lg <%= ['from-red-500 to-red-600', 'from-blue-500 to-blue-600', 'from-green-500 to-green-600', 'from-purple-500 to-purple-600', 'from-amber-500 to-amber-600', 'from-pink-500 to-pink-600', 'from-indigo-500 to-indigo-600'][index % 7] %> text-white flex items-center justify-center"><%= game.player1.email.first.upcase %></div>
            <div class="font-medium"><%= game.player1.email.titleize %></div>
          </div>
          <!-- Right column -->
          <div class=""><%= game.high_score %></div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Games -->
  <h1 class="text-xl font-semibold <%= @games.any? ? 'mb-4' : 'mb-2' %> dark:text-white">My Recent Games</h1>
  <% if @games.any? %>
    <div id="games_list" class="grid gap-4">
      <% @games.each do |game| %>
        <%= render "games/game", game: game %>
      <% end %>
    </div>
  <% else %>
    <div class="text-slate-500">You haven't played yet.</div>
  <% end %>
</div>