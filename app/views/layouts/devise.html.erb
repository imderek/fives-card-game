            <a href="/" class="relative left-2 flex items-center mb-8 text-2xl font-light text-gray-400 dark:text-white tracking-[1rem]">
                FIVES
            </a>
            <%= yield %>
        </div>
      </section>
    </main>


    <footer data-turbo-permanent class="dark bg-white antialiased dark:bg-neutral-900">
      <div class="mx-auto max-w-screen-xl px-4 py-7 md:py-12 md:pb-20">
        <!-- Logo and footer links, along with copyright information -->

        <div>
