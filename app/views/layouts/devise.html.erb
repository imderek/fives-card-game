            <div class="grid min-w-0 flex-1 gap-6 justify-center text-center">
              <div class="mt-[-4px]">
                <%= link_to dashboard_path, class: "mb-2 block" do %>
                    <h3 class="relative left-2 text-xl font-light text-gray-400 dark:text-white tracking-[1rem]">FIVES</h3>
                <% end %>

                <p class="text-sm text-neutral-400 dark:text-neutral-400">Â© 2024 <a href="#" class="hover:underline">Some Co.</a></p>
              </div>
            </div>
          </div>
        </div>


      </div>
    </footer>
  </body>
</html>
