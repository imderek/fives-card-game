<!-- Header -->
<div class="flex flex-row items-center justify-between mb-2">
  <h1 class="block w-1/3 text-3xl font-bold text-white dark:text-white">Fiives</h1>
  <div class="hidden w-1/3 flex flex-row items-center justify-center gap-1.5 leading-none">
    <button data-modal-target="cash-modal" data-modal-toggle="cash-modal" class="inline p-0 text-sm text-slate-500 hover:text-white leading-none">
      <i class="fa-solid fa-money-bill-wave text-green-500 text-sm"></i>
      <span class="text-white text-sm">$1,000</span>
    </button>
  </div>
  <div class="w-1/3 flex justify-end">
    <%= button_to destroy_user_session_path, 
        method: :delete,
        form_class: "flex items-center gap-1.5",
        class: "inline p-0 text-sm text-slate-500 hover:text-white leading-none" do %>
      <i class="fa-solid fa-right-from-bracket"></i>
      <span class="text-slate-400 hover:text-white text-sm">Log Out</span>
    <% end %>
  </div>
</div>

<!-- Cash modal -->
<div id="cash-modal" tabindex="-1" aria-hidden="true" data-modal-placement="center" class="hidden fixed top-0 left-0 right-0 text-left z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow animate-enter-scale">
      <!-- Modal header -->
      <div class="mb-1 p-4 md:p-5 flex items-start justify-between rounded-t">
        <div class="flex flex-col">
          <h3 class="mb-0.5 text-xl font-semibold text-slate-900">
            How to Play Fiives
          </h3>
          <p class="text-sm font-medium text-slate-500">Build poker hands to score points.</p>
        </div>
        <button type="button" class="text-slate-400 bg-transparent hover:bg-slate-200 hover:text-slate-900 rounded-lg text-sm w-8 h-6 ms-auto inline-flex justify-center items-center dark:hover:bg-slate-600 dark:hover:text-white" data-modal-hide="cash-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 pt-0 space-y-6">
        <div class="text-sm text-slate-900">
          <div class="mt-4 mb-2 border-t border-slate-300 pt-4 px-1">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>