<!-- Header -->
<div class="flex flex-row items-center justify-between mb-2">
  <h1 class="block w-1/3 text-3xl font-bold text-white">
    <%= link_to "Fiives", "/", class: "text-white hover:text-slate-300" %>
  </h1>
  <div class="w-1/3 flex flex-row items-center justify-center gap-1.5 text-[.925rem] leading-none">
    <button data-modal-target="cash-modal" data-modal-toggle="cash-modal" class="inline relative top-0.5 p-0 text-slate-500 hover:text-white leading-none">
      <i class="fa-solid fa-money-bill-wave text-green-500"></i>
      <span class="text-white">$1,000</span>
    </button>
  </div>
  <div class="w-1/3 flex justify-end">
    <%= button_to destroy_user_session_path, 
        method: :delete,
        form_class: "flex items-center gap-1.5",
        class: "inline p-0 text-slate-500 hover:text-white text-[.925rem] leading-none relative top-0.5" do %>
      <i class="fa-solid fa-right-from-bracket"></i>
      <span class="text-slate-400 hover:text-white">Log Out</span>
    <% end %>
  </div>
</div>

<!-- Cash modal -->
<div id="cash-modal" tabindex="-1" aria-hidden="true" data-modal-placement="top" class="hidden fixed flex top-0 left-0 right-0 text-left z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative overflow-hidden bg-white rounded-lg shadow animate-enter-scale">
      <div class="text-sm absolute top-[2.25rem] -left-[3.25rem] -rotate-45 bg-slate-400/70 text-white font-medium py-1 px-12 z-10">
        COMING SOON
      </div>
      <!-- Modal header -->
      <div class="p-4 flex items-start justify-between rounded-t">
        <button type="button" class="text-slate-400 bg-transparent hover:bg-slate-200 hover:text-slate-900 rounded-lg text-sm w-8 h-6 ms-auto inline-flex justify-center items-center dark:hover:bg-slate-600 dark:hover:text-white" data-modal-hide="cash-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 pt-0 space-y-6">
        <div class="text-sm text-slate-900">
          <div class="flex flex-col items-center">
            <h3 class="mb-2 text-xl font-medium text-slate-900">Your Balance</h3>
            <div class="flex items-center gap-2 mb-3">
              <i class="fa-solid fa-money-bill-wave text-green-500 text-3xl"></i>
              <span class="text-3xl font-bold">$1,000.00</span>
            </div>
            <p class="mb-6 px-8 text-slate-500 text-center">You'll soon be able to use this to bet during your games.</p>
            <div class="w-full mt-2 pt-4 border-t border-slate-200 text-xs text-slate-500 text-center">
              <p>Note: this is <u>play money only</u>, not real currency. Don't even <i>think</i> about suing me.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>