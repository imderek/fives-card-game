<% flash.each do |key, value| %>
    <div data-controller="flash" id="toast-success" class="dark w-[21rem] md:w-auto fixed top-[1rem] left-1/2 transform -translate-x-1/2 z-50 flex items-center p-3 mb-4 text-gray-100 bg-white rounded-lg dark:text-gray-100 dark:bg-slate-800" role="alert">
        <div class="inline-flex items-center justify-center flex-shrink-0 dark:text-green-400">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
            </svg>
            <span class="sr-only">Check icon</span>
        </div>
        <div class="ms-3 text-sm font-normal"><%= value %></div>
    </div>
<% end %>
