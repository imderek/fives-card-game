<% flash.each do |key, value| %>
  <div data-controller="flash" class="fixed top-8 left-1/2 transform -translate-x-1/2 z-50 py-2 px-4 border border-gray-300 rounded-lg flex items-center text-primary-600">
    <span><%= value %></span>
    <button class="ml-3 text-gray-500 hover:text-primary-700 focus:outline-none" data-action="flash#dismiss">
      &times;
    </button>
  </div>
<% end %>
