<div data-controller="poker" class="w-full md:flex flex-row overflow-x-hidden">
    <!-- Player 1 -->
    <div class="flex flex-col items-center md:w-1/3 pt-14 md:p-20">
        <div data-poker-target="cards" class="mb-8 flex justify-center space-x-4"></div>
        <div data-poker-target="stack" class="w-full md:w-auto mb-6 text-white text-center">
            <div class="flex flex-row justify-center gap-3 mb-3">
                <button 
                data-poker-target="drawButton" 
                data-action="poker#drawCard" 
                class="p-2 px-4 bg-white text-green-600 border-2 border-white/30 text-md font-medium md:w-auto rounded-md md:hover:bg-green-100 md:hover:text-green-700 active:bg-green-900 active:border-green-900 transition-colors touch-manipulation"
                >Draw Card</button>
                <button 
                data-poker-target="discardButton" 
                data-action="poker#discardCard" 
                class="p-2 px-4 border-2 border-white/30 text-white text-md font-medium md:w-auto rounded-md md:hover:bg-green-100 md:hover:text-green-700 active:bg-green-900 active:border-green-900 transition-colors touch-manipulation"
                >Discard</button>
            </div>
            <div class="text-white/50"><span data-poker-target="stackCount"></span> Remaining</div>
        </div>
        <%# <button 
        data-poker-target="dealButton" 
        data-action="poker#dealCards" 
        class="border-2 border-white text-white px-4 py-2 rounded-md hover:bg-green-100 hover:text-green-700 active:bg-green-800 active:border-green-800 transition-colors"
        >Deal Cards</button> %>
    </div>
    <!-- Board -->
    <div data-poker-target="board" class="w-full flex flex-col md:flex-1 bg-green-800"></div>
</div>
