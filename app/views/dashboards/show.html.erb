<div data-controller="poker" class="w-full md:flex flex-row">
    <!-- Player 1 -->
    <div class="flex flex-col items-center md:w-1/3 pt-14 md:p-20">
        <div data-poker-target="cards" class="mb-5 flex justify-center space-x-4"></div>
        <div data-poker-target="stack" class="w-full md:w-auto mb-6 text-white text-center">
            <button 
            data-poker-target="drawButton" 
            data-action="poker#drawCard" 
            class="border-2 border-white/30 text-white text-xl font-bold w-1/2 mx-auto mb-1 md:w-auto px-6 py-4 rounded-md hover:bg-green-100 hover:text-green-700 active:bg-green-800 active:border-green-800 transition-colors"
            >Draw Card</button>
            <div class="text-white/50"><span data-poker-target="stackCount"></span> Remaining</div>
        </div>
        <%# <button 
        data-poker-target="dealButton" 
